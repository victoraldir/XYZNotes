<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_edit_note_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quartzodev.xyznotes.addeditnote.AddEditNoteFragment"
    tools:showIn="@layout/add_edit_note_act">

    <com.quartzodev.xyznotes.view.LinedEditText
        android:id="@+id/add_note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="start"
        android:imeOptions="actionNone"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLength="1500"
        tools:text="@tools:sample/lorem/random"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
